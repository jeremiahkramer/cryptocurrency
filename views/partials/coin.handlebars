<div class = "coin">

	    <div class = "name">
	      <span class = "coin-image">
	      	<img src = "{{coinName}}.png" class = "coin-icon" id = "{{coinName}}-icon">
	      </span>
	      <span class = "coin-full">
	        {{coinFullName}} ({{coinName}})
	      </span>

	    </div>

	    <div class = "price">

	    	<span class = "current-price-box">
		      <span class = "price-label">
		       Current Price
		      </span>

		      <span class = "currency">
		       $
		      </span>
		      <span class = "price-value" id = '{{coinName}}-current-price'>
		        {{currentPrice}}
		      </span>
		    </span>

			<span class = "current-change-box">
		      <span class = 'price-change-label'>
		      	24 Hour Price change
		      </span>
		      <span class = "price-change-value" id = '{{coinName}}-price-change-value'>
		        {{priceChange}}
		      </span>
		      <span class = "percent">
		       %
		      </span>
			</span>

	    </div>

	    <div class = "volume-marketCap">
	    	<span class = "marketCap">
				<span class = "marketCap-label">
					Market Cap
				</span>

				<span class = "currency">
		      		$
		     	</span>

				<span class = "marketCap-value" id = '{{coinName}}-marketCap'>
					{{marketCap}}
				</span>

	    	</span>

			<span class = "twentyFourHrVolume">
				<span class = "twentyFourHrVolume-label">
					24 Hour Volume
				</span>

				<span class = "twentyFourHrVolume-value" id = '{{coinName}}-twentyFourHrVolume'>
					{{twentyFourHrVolume}}
				</span>

				<span class = "coin-currency">
		      		{{coinName}}
		     	</span>

	    	</span>
	    </div>



	    <div class="graph-container">
	    	<canvas class = "chart" id="{{coinName}}Chart" height="220"></canvas>

	    	<script>
	    		var {{coinName}} = document.getElementById("{{coinName}}Chart").getContext('2d');
	    		var {{coinName}}Chart = new Chart({{coinName}}, {
			        type: 'line',
			        data: {
			            labels: ['3AM', '4PM', '5PM', '7PM', '8PM', '9PM', '10PM', '11PM', '12AM', '1AM', '2AM', '3AM', '4AM', '5AM', '6AM', '7AM', '8AM', '9AM', '10AM', '11AM', '12PM', '1PM', '2PM', '3PM'],
			            datasets: [{
			                label: 'Price in USD',
			                data: [{{dataset}}],
			                backgroundColor: [
			                    'rgba(76, 175, 80, 0.2)'
			                ],
			                borderColor: [
			                    'rgba(0, 100, 0, 1)'
			                ],
			                borderWidth: 1,
			                pointHoverBackgroundColor: 'rgb(255, 99, 132)'
			            }]
			        },

			        options: {
			            tooltips: {
			                mode: 'index',
			                intersect: false
			            },
			            elements:{
			                 point:{
			                     radius: 0
			                 }
			             },
			            maintainAspectRatio: false
			        }
			    });
	    	</script>

	    </div>

	</div>
